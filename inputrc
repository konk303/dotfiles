set convert-meta off
set meta-flag on
set output-meta on
set input-meta on

# C-n,C-pで履歴検索
"\C-n":history-search-forward
"\C-p":history-search-backward

#スペースで変数展開
$if Bash
    Space:magic-space
$endif

# Tab一発で候補表示
set show-all-if-ambiguous on

# ディレクトリに印を付ける
set visible-stats on

# Tabサイクル補完
Tab:menu-complete
"\ei":complete
